@{
    ViewData["Title"] = "Login - TalentoPlus";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100 px-4">
    <div class="max-w-md w-full">
        <!-- Logo/Header Section -->
        <div class="text-center mb-8">
            <h1 class="text-4xl font-bold text-gray-900">TalentoPlus</h1>
            <p class="text-gray-600 mt-2">Sistema de Gestión de Empleados</p>
        </div>

        <!-- Login Card -->
        <div class="card shadow-lg">
            <div class="p-8 space-y-6">
                <div>
                    <h2 class="text-2xl font-bold text-gray-900">Iniciar Sesión</h2>
                    <p class="text-gray-600 text-sm mt-1">Ingresa tus credenciales para acceder</p>
                </div>

                <!-- Error Messages -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
                        @foreach (var modelState in ViewData.ModelState.Values)
                        {
                            @foreach (var error in modelState.Errors)
                            {
                                <p class="text-sm">@error.ErrorMessage</p>
                            }
                        }
                    </div>
                }

                <!-- Login Form -->
                <form method="post" class="space-y-4">
                    <!-- Username/Document/Email Input -->
                    <div>
                        <label for="username" class="block text-sm font-medium text-gray-700 mb-1">Documento o Correo</label>
                        <input type="text" id="username" name="username" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition" placeholder="Tu documento o correo" />
                    </div>

                    <!-- Password Input -->
                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Contraseña</label>
                        <input type="password" id="password" name="password" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition" placeholder="Tu contraseña" />
                        <p class="text-xs text-gray-500 mt-1">Ingresa tu contraseña de usuario</p>
                    </div>

                    <!-- Remember Me -->
                    <div class="flex items-center">
                        <input type="checkbox" id="rememberMe" name="rememberMe" class="w-4 h-4 text-blue-600 rounded focus:ring-2 focus:ring-blue-500" />
                        <label for="rememberMe" class="ml-2 text-sm text-gray-600">Recuérdame</label>
                    </div>

                    <!-- Hidden ReturnUrl -->
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                    <!-- Submit Button -->
                    <button type="submit" class="w-full btn-primary py-2">
                        Iniciar Sesión
                    </button>
                </form>

                <!-- Separator -->
                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-white text-gray-500">¿No tienes cuenta?</span>
                    </div>
                </div>

                <!-- Register Link -->
                <a href="@Url.Action("Register", "Account")" class="w-full block text-center btn-secondary py-2">
                    Crear una Nueva Cuenta
                </a>
            </div>
        </div>

        <!-- Footer -->
        <div class="mt-8 text-center text-gray-600 text-sm">
            <p>&copy; 2025 TalentoPlus. Todos los derechos reservados.</p>
        </div>
    </div>
</div>

<style>
.card {
    background-color: white;
    border-radius: 0.5rem;
}

.btn-primary {
    background-color: #3b82f6;
    color: white;
    font-weight: 600;
    border-radius: 0.5rem;
    transition: background-color 0.2s;
    cursor: pointer;
}

.btn-primary:hover {
    background-color: #2563eb;
}

.btn-secondary {
    background-color: #e5e7eb;
    color: #374151;
    font-weight: 600;
    border-radius: 0.5rem;
    transition: background-color 0.2s;
    text-decoration: none;
    display: inline-block;
}

.btn-secondary:hover {
    background-color: #d1d5db;
}
</style>
