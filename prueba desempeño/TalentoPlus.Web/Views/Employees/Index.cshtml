@model IEnumerable<TalentoPlus.Web.Models.Employee>

@{
    ViewData["Title"] = "Empleados";
}

<div class="space-y-6">
    <!-- Header Section -->
    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-4xl font-bold text-gray-900">Empleados</h1>
            <p class="text-gray-600 mt-1">Gestionar todos los registros de empleados</p>
        </div>
            <div class="flex gap-3">
                <a asp-action="Create" class="btn-primary">
                    + Agregar Nuevo Empleado
                </a>
                <a asp-action="ImportExcel" class="btn-secondary">
                    üìä Importar desde Excel
                </a>
            </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="card bg-blue-50 border-l-4 border-blue-600">
            <p class="text-blue-900"><strong>No hay empleados registrados a√∫n.</strong> Haz clic en "Agregar Nuevo Empleado" para crear uno.</p>
        </div>
    }
    else
    {
        <!-- Employees Table -->
        <div class="card overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead class="bg-gray-50 border-b border-gray-200">
                        <tr>
                            <th class="px-4 py-3 text-left font-semibold text-gray-700">Nombre</th>
                            <th class="px-4 py-3 text-left font-semibold text-gray-700">Documento</th>
                            <th class="px-4 py-3 text-left font-semibold text-gray-700">Correo Electr√≥nico</th>
                            <th class="px-4 py-3 text-left font-semibold text-gray-700">Tel√©fono</th>
                            <th class="px-4 py-3 text-left font-semibold text-gray-700">Cargo</th>
                            <th class="px-4 py-3 text-left font-semibold text-gray-700">Departamento</th>
                            <th class="px-4 py-3 text-left font-semibold text-gray-700">Estado</th>
                            <th class="px-4 py-3 text-left font-semibold text-gray-700">Salario</th>
                            <th class="px-4 py-3 text-center font-semibold text-gray-700">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-4 py-3">
                                    <div>
                                        <p class="font-medium text-gray-900">@item.FirstName @item.LastName</p>
                                    </div>
                                </td>
                                <td class="px-4 py-3 text-gray-700">@item.Document</td>
                                <td class="px-4 py-3 text-gray-700">@item.Email</td>
                                <td class="px-4 py-3 text-gray-700">@item.Phone</td>
                                <td class="px-4 py-3 text-gray-700">@item.Position</td>
                                <td class="px-4 py-3">
                                    <span class="px-3 py-1 bg-purple-100 text-purple-800 rounded-full text-xs font-medium">
                                        @(item.Department?.Name ?? "N/A")
                                    </span>
                                </td>
                                <td class="px-4 py-3">
                                    @if (item.Status == "Active" || item.Status == "Activo")
                                    {
                                        <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-xs font-medium">Activo</span>
                                    }
                                    else if (item.Status == "Vacaciones" || item.Status == "Vacation")
                                    {
                                        <span class="px-3 py-1 bg-yellow-100 text-yellow-800 rounded-full text-xs font-medium">En Vacaciones</span>
                                    }
                                    else
                                    {
                                        <span class="px-3 py-1 bg-gray-100 text-gray-800 rounded-full text-xs font-medium">@item.Status</span>
                                    }
                                </td>
                                <td class="px-4 py-3 text-gray-700 font-medium">
                                    @if (item.Salary.HasValue && item.Salary > 0)
                                    {
                                        <span>$@item.Salary?.ToString("N0")</span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400">-</span>
                                    }
                                </td>
                                <td class="px-4 py-3">
                                    <div class="flex justify-center gap-2">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="text-blue-600 hover:text-blue-800 text-xs font-semibold" title="Ver">üëÅÔ∏è</a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-yellow-600 hover:text-yellow-800 text-xs font-semibold" title="Editar">‚úé</a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 hover:text-red-800 text-xs font-semibold" title="Marcar como Inactivo">üóëÔ∏è</a>
                                        <a asp-action="DownloadPDF" asp-route-id="@item.Id" class="text-green-600 hover:text-green-800 text-xs font-semibold" title="Descargar PDF">üìÑ</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
