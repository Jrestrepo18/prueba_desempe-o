@model TalentoPlus.Web.Models.Employee

@{
    ViewData["Title"] = "Agregar Nuevo Empleado";
}

<div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900">Agregar Nuevo Empleado</h1>
        <p class="text-gray-600 mt-1">Completa los detalles para crear un nuevo registro de empleado</p>
    </div>

    <!-- Form Card -->
    <div class="card">
        <form asp-action="Create" method="post" class="space-y-6">
            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-6">
                <p class="font-semibold">Por favor, corrige los siguientes errores:</p>
            </div>

            <!-- Personal Information Section -->
            <div class="border-b border-gray-200 pb-6">
                <h2 class="text-lg font-semibold text-gray-900 mb-4">Información Personal</h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Document" class="block text-sm font-medium text-gray-700 mb-1">Documento</label>
                        <input asp-for="Document" class="input-field" placeholder="123456789" />
                        <span asp-validation-for="Document" class="text-sm text-red-600"></span>
                    </div>
                    <div>
                        <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 mb-1">Nombre</label>
                        <input asp-for="FirstName" class="input-field" placeholder="Juan" />
                        <span asp-validation-for="FirstName" class="text-sm text-red-600"></span>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-4">
                    <div>
                        <label asp-for="LastName" class="block text-sm font-medium text-gray-700 mb-1">Apellido</label>
                        <input asp-for="LastName" class="input-field" placeholder="García" />
                        <span asp-validation-for="LastName" class="text-sm text-red-600"></span>
                    </div>
                    <div>
                        <label asp-for="BirthDate" class="block text-sm font-medium text-gray-700 mb-1">Fecha de Nacimiento (AAAA-MM-DD)</label>
                        <input asp-for="BirthDate" type="date" class="input-field" />
                        <span asp-validation-for="BirthDate" class="text-sm text-red-600"></span>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-4">
                    <div>
                        <label asp-for="Address" class="block text-sm font-medium text-gray-700 mb-1">Dirección</label>
                        <textarea asp-for="Address" class="input-field" rows="2" placeholder="Calle Principal 123, Ciudad"></textarea>
                        <span asp-validation-for="Address" class="text-sm text-red-600"></span>
                    </div>
                    <div>
                        <label asp-for="Phone" class="block text-sm font-medium text-gray-700 mb-1">Teléfono</label>
                        <input asp-for="Phone" class="input-field" placeholder="+57 (555) 123-4567" />
                        <span asp-validation-for="Phone" class="text-sm text-red-600"></span>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-4">
                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Correo Electrónico</label>
                        <input asp-for="Email" type="email" class="input-field" placeholder="juan@ejemplo.com" />
                        <span asp-validation-for="Email" class="text-sm text-red-600"></span>
                    </div>
                </div>
            </div>

            <!-- Professional Information Section -->
            <div class="border-b border-gray-200 pb-6">
                <h2 class="text-lg font-semibold text-gray-900 mb-4">Información Profesional</h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Position" class="block text-sm font-medium text-gray-700 mb-1">Cargo</label>
                        <input asp-for="Position" class="input-field" placeholder="Desarrollador Senior" />
                        <span asp-validation-for="Position" class="text-sm text-red-600"></span>
                    </div>
                    <div>
                        <label asp-for="Salary" class="block text-sm font-medium text-gray-700 mb-1">Salario</label>
                        <input asp-for="Salary" type="number" step="0.01" class="input-field" placeholder="50000.00" />
                        <span asp-validation-for="Salary" class="text-sm text-red-600"></span>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-4">
                    <div>
                        <label asp-for="HireDate" class="block text-sm font-medium text-gray-700 mb-1">Fecha de Ingreso (AAAA-MM-DD)</label>
                        <input asp-for="HireDate" type="date" class="input-field" />
                        <span asp-validation-for="HireDate" class="text-sm text-red-600"></span>
                    </div>
                    <div>
                        <label asp-for="Status" class="block text-sm font-medium text-gray-700 mb-1">Estado</label>
                        <select asp-for="Status" class="input-field">
                            <option value="">Selecciona Estado</option>
                            <option value="Activo">Activo</option>
                            <option value="Vacaciones">Vacaciones</option>
                            <option value="Inactivo">Inactivo</option>
                        </select>
                        <span asp-validation-for="Status" class="text-sm text-red-600"></span>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-4">
                    <div>
                        <label asp-for="EducationLevel" class="block text-sm font-medium text-gray-700 mb-1">Nivel Educativo</label>
                        <input asp-for="EducationLevel" class="input-field" placeholder="Título en Ingeniería" />
                        <span asp-validation-for="EducationLevel" class="text-sm text-red-600"></span>
                    </div>
                    <div>
                        <label asp-for="DepartmentId" class="block text-sm font-medium text-gray-700 mb-1">Departamento</label>
                        <select asp-for="DepartmentId" asp-items="ViewBag.Departments" class="input-field">
                            <option value="">Selecciona un departamento</option>
                        </select>
                        <span asp-validation-for="DepartmentId" class="text-sm text-red-600"></span>
                    </div>
                </div>

                <div class="mt-4">
                    <label asp-for="ProfessionalProfile" class="block text-sm font-medium text-gray-700 mb-1">Perfil Profesional</label>
                    <textarea asp-for="ProfessionalProfile" class="input-field" rows="4" placeholder="Describe tu experiencia profesional, habilidades y logros..."></textarea>
                    <span asp-validation-for="ProfessionalProfile" class="text-sm text-red-600"></span>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="flex gap-3 justify-start pt-6 border-t border-gray-200">
                <button type="submit" class="btn-primary">
                    ✓ Crear Empleado
                </button>
                <a asp-action="Index" class="btn-secondary">
                    ← Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
